{
  "Logging": {
    "LogLevel": {
      "Default": "Error"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "TimestampFormat": "dd-MM-yyyy HH:mm:ss ",
        "UseUtcTimestamp": true,
        "SingleLine": true
      }
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Protocols": "Http1AndHttp2",
        "Url": "http://+:3000"
      },
      "Grpc": {
        "Protocols": "Http2",
        "Url": "http://+:3001"
      }
    }
  }
}
